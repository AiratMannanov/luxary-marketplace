<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script defer src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script defer src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="stylesheets/post-list.css">
<script defer src="/js/post-list.js"></script>
<!------ Include the above in your HEAD tag ---------->

<section>
  {{> filter}}
</section>

<div class="container">
  <div class="map col">
    <div id="map">
      <img class="post-img"
        src="https://stockx-360.imgix.net/Adidas-Yeezy-Boost-350-V2-Zebra/Images/Adidas-Yeezy-Boost-350-V2-Zebra/Lv2/img01.jpg?auto=format,compress&q=90&updated_at=1578503931&w=1000"
        alt="YEEZY" style="max-width: 100%">
    </div>
    <div class="map-c">
      <center>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-rub"> 20000</button>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-envelope"></button>
      </center>
    </div>
  </div>

  <div class="map col">
    <div id="map">
      <img style="max-width: 100%; max-height: 250px; object-fit: cover; margin-left: 10px"
        src="https://ru.louisvuitton.com/images/is/image/lv/1/PP_VP_L/louis-vuitton--N41719_2_PM1_Side%20view.jpg"
        alt="LV">
    </div>
    <div class="map-c">
      <center>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-rub"> 87000</button>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-envelope"></button>
      </center>
    </div>
  </div>

  <div class="map col">
    <div id="map">
      <img style="max-width: 100%; max-height: 250px; object-fit: cover; margin-left: 10px"
        src="https://net13server.net/sanremo/Objimg/18062018/18062018_530.jpg" alt="LV">
    </div>
    <div class="map-c">
      <center>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-rub"> 35000</button>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-envelope"></button>
      </center>
    </div>
  </div>

  <div class="map col">
    <div id="map">
      <img style="max-width: 100%; max-height: 250px; object-fit: cover; margin-left: 10px"
        src="https://media.visio-net.co.uk/oscommerce/images/viewerxxl_new/gucci-GG00270-005-50_1.jpg" alt="LV">
    </div>
    <div class="map-c">
      <center>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-rub"> 17000</button>
        <button style="width: 80px; height: 60px; color: black" class="fa fa-envelope"></button>
      </center>
    </div>
  </div>


  {{#each posts}}
  <div class="map col">
    <div id="map">
      <img style="max-width: 100%; max-height: 250px; object-fit: cover; margin-left: 10px" src="{{img_link}}"
        alt="item">
    </div>
    <div class="map-c">
      <center>
        <button action="/posts/{{_id}}" class="fa fa-rub"> {{price}}</button>
        <button action="/users/{{userId}}" class="fa fa-envelope"></button>
      </center>
    </div>
  </div>
  {{/each}}

</div>
