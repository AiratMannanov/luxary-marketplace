<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="/stylesheets/post-id.css">
<script defer src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script defer src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container d-flex">

  <div class="left-side w-50">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100"
            src="https://www.esprit.com/mobile-resources/data/images/homepage_shop/campaigns/2020-01-20/women.jpg"
            alt="First slide"
            style="max-height: 550px; min-height: 550px; width: auto; object-fit:cover; border-radius: 20px;">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100"
            src="https://fashioninthecity.com/wp-content/uploads/2018/12/GENDER-NEUTRAL-BANNER-FINAL.jpg"
            alt="Second slide"
            style="max-height: 550px; min-height: 550px; width: auto; object-fit:cover; border-radius: 20px; ">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100"
            src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80"
            alt="Third slide"
            style="max-height: 550px; min-height: 550px; width: auto; object-fit:cover; border-radius: 20px;">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span> 
      </a>
    </div>
  </div>

  <div class="right-side w-50 ml-5"
    style="display: flex; justify-content:flex-start; flex-direction: column; align-items:center">
    <h2 style="font-size: 60px;">Title</h2>
    <p style="font-size: 25px; text-align: center">Lorem ipsum dolor sit amet consectetur adipisicing elit. Nihil esse
      ut non quidem
      consectetur dolores culpa saepe
      quia odit pariatur.</p>
    <a class="link" href="/user/id">MESSAGE</a>
    <a class="link link1" href="/user/id">PURCHASE</a>
    <p class="link link1 price">PRICE</p>
  </div>



</div>


